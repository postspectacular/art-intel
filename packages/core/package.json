{
	"name": "@layerinc/core",
	"version": "0.0.1",
	"description": "Shared types & interfaces",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/layerinc/art-intelligence.git"
	},
	"homepage": "https://layer.com/",
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "tsc",
		"clean": "bun ../../tools/clean-package.ts",
		"doc": "typedoc --options ../../typedoc.json --out doc src/index.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test"
	},
	"dependencies": {
		"@thi.ng/logger": "^3.1.11",
		"@thi.ng/system": "^3.1.63"
	},
	"devDependencies": {
		"@types/node": "^24.0.13",
